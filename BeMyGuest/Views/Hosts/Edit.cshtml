@{
    Layout = "_Layout";
}

@model BeMyGuest.Models.Host

<h2>Edit</h2>
<hr />
<h4>Edit this Host: @Html.DisplayFor(model => model.HostName)</h4>

@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.HostId)
    <div class="form-group">
        @Html.LabelFor(model => model.HostName)
        @Html.TextBoxFor(model => model.HostName)
    </div>
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-default">
    </div>
}

<h3>@Html.ActionLink("Hosts Home", "Index", "Hosts")</h3>